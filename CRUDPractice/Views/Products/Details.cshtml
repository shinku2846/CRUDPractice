    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <dt>
                <label asp-for="Name" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </dd>
        </div>
        <div class="form-group">
            <dt>
                <label asp-for="Price" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </dd>
        </div>
        <div class="form-group">
            <dt>
                <label asp-for="Description" class="control-label"></label>
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </dd>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <h2>Stock Information</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Count
                </th>
                <th>
                    StorePosition
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model.Stocks)
            {
                <tr>
                    <td>@stock.Count</td>
                    <td>@stock.StorePosition</td>
                    <td>
                        <a asp-controller="Stocks" asp-action="Edit" asp-route-productId="@Model.Id" asp-route-id="@stock.Id">Edit</a> |
                        <a asp-controller="Stocks" asp-action="Delete" asp-route-productId="@Model.Id" asp-route-id="@stock.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Stocks" asp-action="Create" asp-route-productId="@Model.Id">Create Stock</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
